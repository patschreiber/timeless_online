.container
  .row
    .col-sm-4.col-sm-offset-3
      %div
        Enemy HP
        %span#enemy-hp{ :data => {"hp" => 100} }
      %div
        Player HP
        %span#player-hp{ :data => {"hp" => 100} }
      %div 
        Armor Rating
        %span#armor-rating{ :data => {"hp" => 100} }

      .progress
        .progress-bar#player-atb-gauge{ :role => :progressbar, "aria-valuenow" => 100, "aria-valuemin" => 0, "aria-valuemax" => 100, :style => "width:0%"}
      .progress
        .progress-bar#enemy-atb-gauge{ :role => :progressbar, "aria-valuenow" => 100, "aria-valuemin" => 0, "aria-valuemax" => 100, :style => "width:0%"}

