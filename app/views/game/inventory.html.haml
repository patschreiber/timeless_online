- content_for :body_class, "inventory"

.container
  .row
    %h1
      #{current_user.username.capitalize}'s
      Inventory
  %hr
  .row
    %h3 
      Currently Equipped
    .col-sm-8
      .row
        .col-xs-4.col-xs-offset-4
          .well#equipped-head
        .col-xs-4
          .well#equipped-neck
      .row
        .col-xs-4
          .well#equpped-arm-1
        .col-xs-4
          .well#equipped-body
        .col-xs-4
          .well#equipped-arm-2
      .row
        .col-xs-4
          .well#equipped-hand-1
        .col-xs-4
          .well#equipped-legs
        .col-xs-4
          .well#equipped-hand-2
      .row
        .col-xs-4
          .well#equipped-ring-1
        .col-xs-4
          .well#equipped-feet
        .col-xs-4
          .well#equipped-ring-2

    .col-sm-4
      #current-stats
  
  .row
    %h3
      Loot Crate
    .col-md-6
      %h4
        Equippables
      %table#loot-crate.table-condensed
        %thead
          %tr
            %th
              Equipped
            %th
              
            %th
              Quantity
            %th
            %th
        %tbody
          - @user_inventories_equippables.each do |item|
            %tr{ :id => "item-id-#{item.unique_item_id}"}
              %td.equipped
              %td.name
                %span
                  %img{ :src => "http://placehold.it/50x50" }
                = item.generated_item.prefix_name 
                = item.generated_item.name
                = item.generated_item.suffix_name
              %td.quantity
                = item.quantity
              %td.action
                %button.btn.btn-primary
                  Equip
              %td.options
                = link_to "#" do
                  %span
                    .ss-icon.ss-directright

    .col-md-6
      %h4
        Consumables
      %table#loot-crate.table-condensed
        %thead
          %tr
            %th
              
            %th
              Quantity
            %th
            %th

        %tbody
          - @user_inventories_consumables.each do |item|
            %tr{ :id => "item-id-#{item.unique_item_id}"}
              %td.name
                %span
                  %img{ :src => "http://placehold.it/50x50" }
                = item.item.name
              %td.quantity
                = item.quantity
              %td.action
                %button.btn.btn-primary
                  Use
              %td.options
                = link_to "#" do
                  %span
                    .ss-icon.ss-directright







