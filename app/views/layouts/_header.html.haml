%nav.navbar.navbar-default{ :role => "navigation" }
  .container
    .navbar-header
      %button.navbar-toggle{ :type => "button", :data => { :toggle => "collapse", :target => "#main_navbar" } }
        %span.sr-only
          Toggle Navigation
        MENU
      = link_to "#{application_name}", root_path, :class => "navbar-brand"
    .navbar-collapse.collapse#main_navbar
      %ul.nav.navbar-nav.navbar-right
        - if user_signed_in?
          %li
            = link_to game_path do
              %span.ss-icon.ss-globe
              War Room
          %li
            = link_to "#" do
              %span.ss-icon.ss-box  
              Messages 
          %li
            = link_to "#" do
              %span.ss-icon.ss-users
              Friends
          %li.dropdown
            = link_to "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" } do
              %span.ss-icon.ss-settings
              %ul.dropdown-menu{ :role => "menu" }
                %li
                  = link_to profile_path do
                    %span.ss-icon.ss-user
                    Profile
                %li
                  = link_to "#" do
                    %span.ss-icon.ss-info
                    Help
                %li.divider
                %li
                  = link_to signout_path, method: "delete" do
                    %span.ss-icon.ss-logout
                    Signout   
        - else
          %li
            = button_to "Sign Up", signup_path, :class => "navbar-btn btn btn-default"
          %li
            = link_to "Sign In", signin_path
