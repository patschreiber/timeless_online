.container
  .row
    .col-sm-6.col-sm-offset-3
      %h2
        Register your character's identity
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| 
        = devise_error_messages! 
        .form-group
          = f.label "" do
            Email address
            %span.small.text-info
              (This will never be public and never given away)
          = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address"
        .form-group
          = f.label "" do
            Desired name
            %span.small.text-info
              (Username)
          = f.text_field :username, :class => "form-control", :placeholder => "Username", :maxlength => 15
        .form-group
          .row
            .col-sm-6
              = f.label :password 
              = f.password_field :password, autocomplete: "off", :class => "form-control", :placeholder => "Password"

            .col-sm-6
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off", :class => "form-control"
        = f.submit "Sign up", :class => "btn btn-primary btn-block"
        %hr
        = render "devise/shared/links"
